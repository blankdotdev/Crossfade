<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:paddingBottom="80dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- 1. Title (Matches Step 1) -->
    <TextView
        android:id="@+id/titleStep2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Seamless Transitions"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceHeadlineMedium"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 2. Subtitle (Matches Step 1 position relative to title) -->
    <TextView
        android:id="@+id/subtitleStep2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="To automatically open links in your preferred app, Crossfade needs to be set as your default music link handler."
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleStep2" />

    <!-- 3. Visualization Container (Flow Chart) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/visualizationContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/subtitleStep2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <!-- 1. Globe -->
        <ImageView
            android:id="@+id/iconSource"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_globe"
            android:padding="16dp"
            app:tint="?android:attr/textColorSecondary"
            android:background="@drawable/bg_circle_soft"
            app:layout_constraintEnd_toStartOf="@+id/iconArrow1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 2. Arrow 1 -->
        <ImageView
            android:id="@+id/iconArrow1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_forward"
            app:tint="?attr/colorPrimary"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/iconSource"
            app:layout_constraintEnd_toStartOf="@+id/iconCrossfade"
            app:layout_constraintStart_toEndOf="@+id/iconSource"
            app:layout_constraintTop_toTopOf="@+id/iconSource" />

        <!-- 3. Crossfade Icon (Center) -->
        <ImageView
            android:id="@+id/iconCrossfade"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@mipmap/ic_launcher_round" 
            android:background="@drawable/bg_circle_soft"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/iconSource"
            app:layout_constraintEnd_toStartOf="@+id/iconArrow2"
            app:layout_constraintStart_toEndOf="@+id/iconArrow1"
            app:layout_constraintTop_toTopOf="@+id/iconSource" />

        <!-- 4. Arrow 2 -->
        <ImageView
            android:id="@+id/iconArrow2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_forward"
            app:tint="?attr/colorPrimary"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/iconSource"
            app:layout_constraintEnd_toStartOf="@+id/iconTarget"
            app:layout_constraintStart_toEndOf="@+id/iconCrossfade"
            app:layout_constraintTop_toTopOf="@+id/iconSource" />

        <!-- 5. Target Service -->
        <ImageView
            android:id="@+id/iconTarget"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_spotify"
            android:padding="16dp"
            android:background="@drawable/bg_circle_soft"
            android:elevation="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/iconSource"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iconArrow2"
            app:layout_constraintTop_toTopOf="@+id/iconSource" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 4. Button - Hung directly under visualization -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSetDefault"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:text="Set as Default Handler"
        app:icon="@drawable/ic_settings"
        app:iconGravity="textStart"
        app:cornerRadius="32dp"
        app:layout_constraintTop_toBottomOf="@+id/visualizationContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
